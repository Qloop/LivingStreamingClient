<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.qloop.orange">

    <!-- 申明应用需要用到相机 -->
    <uses-feature android:name="android.hardware.camera"/>
    <!-- 申明应用需要用到自动对焦 -->
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <!-- 申请相机权限 -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- 申请录音权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!-- 系统不会进入休眠 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".view.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity"/>
        <activity android:name=".view.TestActivity"/>
        <activity
            android:name=".view.PushActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".view.CreateRoomActivity"/>
        <activity android:name=".view.PullActivity"/>
        <activity android:name=".view.SettingsActivity"/>
        <activity android:name=".view.LoginActivity"/>
        <activity android:name=".view.SignUpActivity"/>
        <activity android:name=".view.ResetPwdActivity"/>
        <activity
            android:name=".view.CopyRightActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>
        <activity android:name=".view.FeedbackActivity"/>
        <activity android:name=".view.ProfileActivity"/>
        <activity
            android:name=".view.ChangeAvatarActivity"
            android:theme="@style/MyDialogActivityStyle"/>
    </application>

</manifest>