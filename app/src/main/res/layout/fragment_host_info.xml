<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/head_circle"
            android:padding="5dp"
            android:src="@mipmap/ic_avatar_default"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_avatar"
            android:padding="10dp"
            android:textColor="@color/colorLightBlack"
            android:textSize="20sp"
            tools:text="主播名字"/>

        <TextView
            android:id="@+id/tv_room_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nickname"
            android:layout_toEndOf="@+id/iv_avatar"
            android:padding="10dp"
            android:textSize="16sp"
            tools:text="房间ID: 5651"/>

        <Button
            android:layout_centerVertical="true"
            android:id="@+id/btn_rss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_btn_login"
            android:text="@string/str_rss"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_live_info"
            android:textColor="@color/colorLightBlack"
            android:textSize="16sp"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorGray"/>

        <TextView
            android:id="@+id/tv_live_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="直播的是什么东东呢？？？？"/>
    </LinearLayout>
</LinearLayout>