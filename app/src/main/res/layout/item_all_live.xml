<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rl_all_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:src="@mipmap/home_list_item_bg"/>

    <TextView
        android:id="@+id/tv_live_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_thumbnail"
        android:layout_alignStart="@+id/iv_thumbnail"
        android:layout_below="@+id/iv_thumbnail"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:paddingTop="3dp"
        android:textColor="@color/colorBlack"
        android:textSize="13sp"
        tools:text="直播名字"/>

    <TextView
        android:id="@+id/tv_live_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_live_name"
        android:layout_below="@+id/tv_live_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:textColor="@color/colorGray2"
        android:textSize="10sp"
        tools:text="直播间名字"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_live_name"
        android:layout_toStartOf="@+id/tv_watch_count"
        android:paddingEnd="2dp"
        android:paddingTop="6dp"
        android:src="@mipmap/ico_people"/>


    <TextView
        android:id="@+id/tv_watch_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_thumbnail"
        android:layout_below="@+id/tv_live_name"
        android:gravity="end"
        android:paddingTop="5dp"
        android:textColor="@color/colorGray2"
        android:textSize="10sp"
        tools:text="240.9万"/>
</RelativeLayout>