<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="width" format="dimension"/>
        <attr name="borderWith" format="dimension"/>
        <attr name="borderColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ProfileItemLayout">
        <attr name="profile_icon" format="reference"/>
        <attr name="profile_title" format="string|reference"/>
        <attr name="profile_subtitle" format="string|reference"/>
        <attr name="profile_showBaseLine" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TopBarView">
        <attr name="topTitle" format="string|reference"/>
        <attr name="topSubtitle" format="string|reference"/>
        <attr name="topIcon" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AvatarImageBehavior">
        <attr name="finalYPosition" format="dimension"/>
        <attr name="startXPosition" format="dimension"/>
        <attr name="startToolbarPosition" format="dimension"/>
        <attr name="startHeight" format="dimension"/>
        <attr name="finalHeight" format="dimension"/>
    </declare-styleable>
</resources>